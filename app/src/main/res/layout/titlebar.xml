<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp" android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="marquee"
        android:gravity="center_horizontal|center"
        android:maxLines="1"
        android:text="@string/app_title"
        android:textColor="@color/colorMain"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/btn_header_right"
        android:layout_alignBottom="@+id/btn_header_right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_header_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_action_back"
        android:gravity="start"
        android:maxLines="1"
        android:paddingLeft="5dp" />

    <Button
        android:id="@+id/btn_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/ic_action_scan"
        android:drawableRight="@drawable/ic_action_scan"
        android:maxLines="1"
        android:paddingRight="5dp" />
    <Button
        android:id="@+id/btn_header_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="5dp"
        android:visibility="invisible"/>

</RelativeLayout>
